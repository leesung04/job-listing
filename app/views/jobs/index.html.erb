<div class="col-md-12">
  <div class="job">
    <%= link_to("增加新职位", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>职位</td>
        <td>描述</td>
        <td>薪资上限</td>
        <td>薪资下限</td>
        <td>联系方式</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.max %></td>
          <td><%= job.min %></td>
          <td><%= job.email %></td>
          <td>
              <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", job_path(job),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "您确定要删除吗?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

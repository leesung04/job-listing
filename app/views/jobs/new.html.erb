<div class="col-md-4 col-md-offset-4">
    <h2>新增职位</h2>

    <hr>
    <%= form_for @job do |f| %>

    职位
    <%= f.text_field :title %>
    <br>
    描述
    <br>
    <%= f.text_area :description %>
    <br>
    薪资上限
    <br>
    <%= f.text_area :max %>
    <br>
    薪资下限
    <br>
    <%= f.text_area :min %>
    <br>
    联系方式
    <br>
    <%= f.text_area :email %>
    <br>

    <%= f.submit "提交", :disable_with => '提交中...请耐心等待' %>
    <% end %>

</div>

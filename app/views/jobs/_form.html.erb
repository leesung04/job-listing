<%= form_for @job do |f| %>

<div class="form-job">
    <div class="form-job string optional">
        <%= f.label "职位", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-job string optional">
        <%= f.label "描述", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>

    <div class="form-job string optional">
        <%= f.label "薪资上限", :class => "string optional control-label" %>
        <%= f.text_area :max, :class => "string optional form-control" %>
    </div>

    <div class="form-job string optional">
        <%= f.label "薪资下限", :class => "string optional control-label" %>
        <%= f.text_area :min, :class => "string optional form-control" %>
    </div>

    <div class="form-job string optional">
        <%= f.label "联系方式", :class => "string optional control-label" %>
        <%= f.text_area :email, :class => "string optional form-control" %>
    </div>

</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
